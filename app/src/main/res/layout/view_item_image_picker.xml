<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    style="@style/match_wrap_style"
    android:layout_margin="@dimen/space_layout_margin"
    android:background="@drawable/image_picker_background"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingTop="@dimen/space_layout_padding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_layout_margin_small">

        <ImageView
            android:id="@+id/iv_list"
            style="@style/match_parent_style"
            android:src="@drawable/no_image_available" />

        <ImageView
            android:id="@+id/imgQueueMultiSelected"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="right"
            android:background="@color/color_green"
            android:contentDescription="@string/app_name"
            android:gravity="center"
            android:scaleType="center"
            android:visibility="gone" />

    </RelativeLayout>

</LinearLayout>

