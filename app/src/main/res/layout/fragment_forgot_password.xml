<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match_parent_style"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView style="@style/match_parent_style">

        <LinearLayout
            style="@style/match_parent_style"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_username"
                style="@style/match_wrap_style">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/tie_username"
                    style="@style/text_input_edittext_common"
                    android:hint="@string/lbl_username"
                    android:imeOptions="actionDone"
                    android:inputType="textEmailAddress" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/btn_send_email"
                style="@style/btn_common"
                android:layout_marginTop="@dimen/_35sdp"
                android:text="@string/lbl_send_email" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>