<resources>

    <!-- Base application theme. -->
    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">

    </style>

    <style name="MyMaterialTheme.Base" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/color_white</item>
        <item name="colorControlNormal">@color/color_white</item>
        <item name="colorControlHighlight">@color/secondary_text</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ToolbarColoredBackArrow" parent="MyMaterialTheme">
        <item name="android:textColorSecondary">@color/colorWhite</item>
    </style>


    <style name="match_parent_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="wrap_content_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="match_wrap_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wrap_match_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="textview_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_margin">@dimen/_4sdp</item>
        <item name="android:padding">@dimen/_3sdp</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="textview_label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_margin">@dimen/_5sdp</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="imageview_item">
        <item name="android:layout_width">@dimen/_70sdp</item>
        <item name="android:layout_height">@dimen/_70sdp</item>
        <item name="android:layout_margin">@dimen/_2sdp</item>
        <item name="android:padding">@dimen/_2sdp</item>
        <item name="android:background">@drawable/bg_border_spinner</item>
    </style>

    <style name="wrapcontent_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/_5sdp</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="radio_button_common">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_margin">@dimen/_4sdp</item>
        <item name="android:padding">@dimen/_3sdp</item>
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:button">@drawable/radio_selecter</item>
    </style>

    <style name="btn_common">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:paddingBottom">@dimen/_5sdp</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="btn_common_wrap_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/_2sdp</item>
        <item name="android:paddingBottom">@dimen/_2sdp</item>
        <item name="android:paddingLeft">@dimen/_20sdp</item>
        <item name="android:paddingRight">@dimen/_20sdp</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="text_input_layout_common">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/_10sdp</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorHint">@color/secondary_text</item>
        <item name="android:tint">@color/primary_text</item>
        <item name="android:backgroundTint">@color/colorWhite</item>
    </style>

    <style name="text_input_edittext_common">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:layout_marginLeft">@dimen/_10sdp</item>
        <item name="android:layout_marginRight">@dimen/_10sdp</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor_search</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorHint">@color/secondary_text</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="edit_text_remarks">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_70sdp</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:backgroundTint">@color/primary_text</item>
        <item name="android:layout_margin">@dimen/_10sdp</item>
        <item name="android:gravity">top|left</item>
        <item name="android:inputType">textMultiLine|textCapSentences</item>
        <item name="android:maxLines">4</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:hint">@string/lbl_remarks_any</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:background">@drawable/bg_border_white</item>
    </style>

</resources>
